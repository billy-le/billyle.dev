---
interface Props {
  className?: string;
}

import projectsData from "@data/projects.json";

const { className = "" } = Astro.props;
---
<section id="projects" class={`relative h-full ${className}`}>
  <div class="container h-full flex flex-col py-8">
    <h2 class="text-heading">Projects.</h2>
    <div class="flex flex-col space-y-4 md:flex-row md:space-y-0 md:space-x-8">
      {
        projectsData.map(
          ({ name, description, images, link, sourceCode, tags }) => (
            <div class="w-full bg-slate-100 rounded-lg shadow p-8 space-y-4 flex flex-col justify-between">
              <div class="space-y-3">
                <div class="flex justify-between">
                  <h3 class="text-xl text-slate-800">{name}</h3>
                <h4 class="flex items-center space-x-2">
                  <i class="fa-solid fa-link fa-xs text-blue-400" />
                  <a
                  href={link}
                  rel="noopener noreferrer"
                  target="_blank"
                    class="link-hover text-xs text-slate-600"
                    >
                    {link}
                    </a>
                    </h4>
                    </div>
                    <p class="text-sm text-slate-600">{description}</p>
              </div>
              <div>
                <h4 class="text-sm text-slate-800 mb-1">Source Code:</h4>
                <ul class="space-y-0.5">
                  {sourceCode.map(({ host, link }) => (
                    <li class="flex items-center space-x-2">
                      {host === "github" && (
                        <i class="fa-brands fa-square-github fa-lg text-slate-800" />
                      )}
                      <h4 class="leading-none">
                        <a
                          href={link}
                          rel="noopener noreferrer"
                          target="_blank"
                          class="link-hover text-xs text-slate-600"
                        >
                          {link}
                        </a>
                      </h4>
                    </li>
                  ))}
                </ul>
                </div>
                <p class="text-sm text-slate-600">{tags.join(", ")}</p>
            </div>
          )
        )
      }
    </div>
  </div>
</section>
<script>

</script>
