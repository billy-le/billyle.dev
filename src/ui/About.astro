---
interface Props {
  className?: string;
}

import { Picture } from "astro:assets";

import blobOffset from "@assets/images/blob-offset.webp";
import mePic from "@assets/images/me.png";

const about = [
  "Coding isn't the only thing I love to do - I also enjoy playing with my dogs, learning about investments and finance, reading books, and watching TV shows.",
  "Occasionally, when the mood is just right, I take a drive into the mountains for a scenic cruise or enjoy a nice hike.",
  "Most of all, if I could leisure endlessly, I would find myself in another country, immersed in their food and culture.",
];

const { className = "" } = Astro.props;
---

<section id="about" class={`relative ${className}`}>
  <div class="container h-full flex flex-col py-8">
    <h2 class="text-heading no-js no-js">About.</h2>
    <div class="relative h-full 2xl:mb-20">
      <div class="grid gap-8 md:grid-cols-3">
        <div class="relative mx-auto md:col-span-2">
          <Picture
            src={blobOffset}
            widths={[320, 640, 768, 1024]}
            format="webp"
            class="relative w-[320px] h-[320px] md:w-[600px] md:h-[600px] md:-left-20 dark:opacity-15"
            alt=""
            aria-hidden="true"
          />
          <Picture
            src={mePic}
            widths={[320, 640, 768, 1024]}
            class="absolute top-0 object-contain max-h-full"
            alt="Billy Le smiling in a gray t-shirt"
            loading="lazy"
          />
        </div>

        <div class="p-fade flex flex-col justify-center space-y-6">
          {about.map((text) => <p class="text-body opacity-0 no-js">{text}</p>)}
        </div>
      </div>
    </div>
  </div>
</section>
