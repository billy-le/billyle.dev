---
interface Props {
  title: string;
  description: string;
  image: {
    url: string;
    alt: string;
  };
  link: string | undefined;
  className?: string;
}

const { className = "", title, link } = Astro.props;
---

<div class={`isolate relative overflow-hidden h-full ${className}`}>
  <div class="relative p-10">
    <h3 class="text-lg">{title}</h3>
    {link && <a href={link}>{link}</a>}
  </div>
</div>
