---
interface Props {
  height?: number | string;
  width?: number | string;
  className?: string;
}

const { className = "", height, width } = Astro.props;
---

<svg
  {height}
  {width}
  class={className}
  viewBox="0 0"
  xmlns="http://www.w3.org/2000/svg"
>
  <filter id="svg-grain">
    <feTurbulence
      type="fractalNoise"
      baseFrequency=".6"
      numOctaves="3"
      stitchTiles="stitch"></feTurbulence>
  </filter>
  <rect
    width="100%"
    height="100%"
    filter={`url(#svg-grain)`}
    class="fill-slate-100 dark:fill-slate-700"></rect>
</svg>
