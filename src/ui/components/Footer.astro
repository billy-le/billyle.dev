---
interface Props {
  className?: string;
}

import { navLinks } from "./Header.astro";
import { siTelegram, siGithub, siDiscord, siSimpleicons } from "simple-icons";

import SiIcon from "./SiIcon.astro";

const linksOfThree: string[][] = [];
for (let i = 0; i < navLinks.length; i++) {
  const link = navLinks[i] as string;
  if (i % 3 === 0) {
    linksOfThree.push([link]);
  } else {
    const lastIndex = linksOfThree.length - 1;
    linksOfThree[lastIndex]?.push(link);
  }
}

const { className = "" } = Astro.props;
const date = new Date();
---

<footer
  id="footer"
  class={`bg-slate-500 opacity-90 dark:bg-slate-900 ${className}`}
>
  <div class="container flex flex-col space-y-4 py-6 text-gray-200">
    <div
      class="flex h-full grow flex-col gap-8 md:flex-row md:gap-0 md:divide-x md:divide-solid md:divide-slate-200"
    >
      <div class="w-full md:py-4 md:pr-4 md:text-right">
        <h4 class="mb-3 w-full tracking-widest text-green-300 uppercase">
          Get Around
        </h4>
        <div class="w-max md:ml-auto">
          <div class="grid grid-cols-3 gap-6">
            <div class="flex flex-col gap-1">
              <a
                href="sitemap-index.xml"
                target="_blank"
                class="link-hover footer-link"
              >
                Sitemap
              </a>
            </div>
            {
              linksOfThree.map((links) => (
                <div class="flex flex-col gap-1">
                  {links.map((link) => (
                    <a
                      href={
                        link === "blog" ? "/blog" : `/#${link.toLowerCase()}`
                      }
                      class="link-hover footer-link capitalize"
                    >
                      {link}
                    </a>
                  ))}
                </div>
              ))
            }
          </div>
        </div>
      </div>
      <div class="w-full md:py-4 md:pl-4">
        <h5 class="mb-3 w-full tracking-widest text-green-300 uppercase">
          Stay in touch
        </h5>
        <div class="flex flex-col gap-10 lg:flex-row">
          <div class="space-y-1">
            <a href="tel:+17029079889" class="link-hover footer-link"
              >+17029079889
            </a>
            <a href="mailto:hi@billyle.dev" class="link-hover footer-link">
              hi@billyle.dev
            </a>
          </div>
          <div
            class="flex w-full items-center justify-center space-x-4 sm:justify-start lg:justify-end"
          >
            <a
              href="https://github.com/billy-le"
              target="_blank"
              rel="noopener noreferer"
              aria-label="Link to Github Profile"
            >
              <SiIcon
                icon={siGithub}
                svgClassName="h-10 w-10 fill-slate-800 transition-all duration-300 ease-out hover:translate-y-[-10%] hover:fill-slate-900 dark:fill-slate-700 dark:hover:fill-slate-800 2xl:h-12 2xl:w-12"
              />
            </a>
            <p class="text-4xl text-gray-200" aria-hidden="true">/</p>
            <a
              href="https://t.me/billyle"
              target="_blank"
              rel="noopener noreferer"
              class="group"
              aria-label="Link to Telegram Profile"
            >
              <SiIcon
                icon={siTelegram}
                svgClassName="h-10 w-10 fill-slate-800 transition-all duration-300 ease-out hover:translate-y-[-10%] hover:fill-slate-900 dark:fill-slate-700 dark:hover:fill-slate-800 2xl:h-12 2xl:w-12"
              />
            </a>
            <p class="text-4xl text-gray-200" aria-hidden="true">/</p>
            <a
              href="https://discordapp.com/users/billyle#0480"
              target="_blank"
              rel="noopener noreferer"
              class="group"
              aria-label="Link to Discord Profile"
            >
              <SiIcon
                icon={siDiscord}
                svgClassName="h-10 w-10 fill-slate-500 bg-slate-800 rounded-full p-2 transition-all duration-300 ease-out hover:bg-slate-900 hover:translate-y-[-10%] dark:fill-slate-900 dark:bg-slate-700 dark:hover:bg-slate-800 2xl:h-12 2xl:w-12"
              />
            </a>
            <p class="text-4xl text-gray-200" aria-hidden="true">/</p>
            <a
              href="https://www.linkedin.com/in/billyledev/"
              target="_blank"
              rel="noopener noreferer"
              class="group grid"
              aria-label="Link to Linkedin Profile"
            >
              <svg
                viewBox="0 0 128 128"
                class="h-10 w-10 fill-slate-800 transition-all duration-300 ease-out hover:translate-y-[-10%] hover:fill-slate-900 2xl:h-12 2xl:w-12 dark:fill-slate-700 dark:hover:fill-slate-800"
              >
                <path
                  d="M116 3H12a8.91 8.91 0 00-9 8.8v104.42a8.91 8.91 0 009 8.78h104a8.93 8.93 0 009-8.81V11.77A8.93 8.93 0 00116 3zM39.17 107H21.06V48.73h18.11zm-9-66.21a10.5 10.5 0 1110.49-10.5 10.5 10.5 0 01-10.54 10.48zM107 107H88.89V78.65c0-6.75-.12-15.44-9.41-15.44s-10.87 7.36-10.87 15V107H50.53V48.73h17.36v8h.24c2.42-4.58 8.32-9.41 17.13-9.41C103.6 47.28 107 59.35 107 75z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
