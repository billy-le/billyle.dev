---
import { siRss } from "simple-icons";
import { cn } from "@utils/cn";
import SiIcon from "./SiIcon.astro";

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<a
  href="https://billyle.dev/rss.xml"
  class={cn(
    "group flex w-fit items-center gap-4 rounded-lg bg-orange-400 px-2 py-1 text-sm text-orange-100 no-underline shadow-md transition duration-200 ease-linear hover:bg-orange-500 hover:text-orange-50 hover:shadow-lg focus:bg-orange-500 focus:shadow-lg sm:px-6 sm:py-2 sm:text-base",
    className,
  )}
>
  <SiIcon icon={siRss} pathClassName="fill-orange-100" />
  <span class="font-semibold">Subscribe</span>
</a>
