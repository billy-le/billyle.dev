---
export interface BlogPost {
  title: string;
  pubDate: Date;
  description: string;
  author: string;
  image: { url: string; alt: string };
  tags: string[];
}

import Layout from "@layouts/Layout.astro";
import Header from "@ui/components/Header.astro";
import Footer from "@ui/components/Footer.astro";
const allPosts = await Astro.glob<BlogPost>("/src/pages/blog/*.md");
---

<Layout title="Blog" description="">
  <Header />
  <main class="py-16 h-[4000px]">
    {
      allPosts.map((post) => {
        return <div>{post.frontmatter.title}</div>;
      })
    }
  </main>
  <Footer />
</Layout>
