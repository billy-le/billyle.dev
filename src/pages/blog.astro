---
export interface BlogPost {
  title: string;
  pubDate: Date;
  description: string;
  author: string;
  image: { url: string; alt: string };
  tags: string[];
}

import { compareDesc, format as dateFormat } from "date-fns";
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";

import stirringCoffee from "@assets/images/stirring_coffee.png";
import uiTesting from "@assets/images/ui_testing.png";
import blob01 from "@assets/images/blog-blob-01.png";
import blob02 from "@assets/images/blog-blob-02.png";
import SvgGrain from "@ui/components/SvgGrain.astro";
import RssFeedButton from "@ui/components/RssFeedButton.astro";

import { allPosts } from "@utils/getCollection";

const descPosts = allPosts.sort((a, b) =>
  compareDesc(a.data.pubDate, b.data.pubDate),
);
---

<Layout title="Billy Le | Blog" description="My collection of blog posts">
  <div class="container relative mx-auto py-16">
    <div class="absolute left-10 top-0 hidden sm:block lg:top-20">
      <div
        class="absolute left-0 top-0 -z-10 h-48 w-48 opacity-15
          xl:h-52 xl:w-52
          2xl:h-80 2xl:w-80"
      >
        <Image
          src={blob01}
          alt=""
          class="h-full w-full max-w-full"
          aria-hidden="true"
        />
      </div>
      <Image
        src={stirringCoffee}
        alt=""
        widths={[128, 256, 512]}
        sizes={`(max-width: 512px) 128px, (max-width: 512px) 256px, 512px`}
        class="h-48 w-48 max-w-full xl:h-52 xl:w-52 2xl:h-80 2xl:w-80"
      />
    </div>

    <div class="absolute right-10 top-0 hidden sm:block lg:top-20">
      <div
        class="absolute left-0 top-0 -z-10 h-48 w-48 opacity-15
          xl:h-52 xl:w-52
          2xl:h-80 2xl:w-80"
      >
        <Image
          src={blob02}
          alt=""
          class="h-full w-full max-w-full"
          aria-hidden="true"
        />
      </div>
      <Image
        src={uiTesting}
        alt=""
        widths={[128, 256, 512]}
        sizes={`(max-width: 512px) 128px, (max-width: 512px) 256px, 512px`}
        class="h-48 w-48 max-w-full xl:h-52 xl:w-52 2xl:h-80 2xl:w-80"
      />
    </div>

    <h1
      class="mx-auto mb-6 text-center font-space-android text-3xl leading-tight tracking-widest text-slate-800 dark:text-slate-100 sm:my-10 sm:text-6xl"
    >
      <span class="text-glow px-3 py-2 text-slate-100 dark:text-slate-800">
        My blog
      </span>
    </h1>
    <p
      class="mx-auto mb-8 max-w-3xl text-center font-inter text-lg font-bold tracking-wide text-slate-600 dark:text-slate-200 sm:mb-16 sm:text-3xl"
    >
      My creative outlet is a reflection of the experiences I've
      encountered—whether in learning, facing setbacks, or achieving success—as
      a software developer.
    </p>

    <RssFeedButton className="mx-auto mb-8" />

    <section class="grid gap-12 sm:grid-cols-2 lg:grid-cols-4 lg:gap-8">
      {
        descPosts.map(async (post) => {
          const { remarkPluginFrontmatter } = await post.render();
          const publishedDate = dateFormat(post.data.pubDate, "MMM do, yyyy");

          return (
            <div>
              <h3 class="mb-2 font-vidaloka text-xl font-bold text-emerald-500 dark:text-emerald-300">
                {post.data.title}
              </h3>
              <div class="mb-4 flex items-center gap-8 text-sm">
                <p class="inline-flex items-center gap-2">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    class="inline h-6 w-6 fill-none stroke-slate-400 dark:stroke-slate-600"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z"
                    />
                  </svg>
                  <span class="text-slate-400">{publishedDate}</span>
                </p>

                <p class="inline-flex items-center gap-2">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    class="inline h-6 w-6 fill-none stroke-slate-400 dark:stroke-slate-600"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                    />
                  </svg>
                  <span class="text-slate-400">
                    {remarkPluginFrontmatter.readingTime}
                  </span>
                </p>
              </div>
              <p class="mb-3 text-slate-600 dark:text-slate-300">
                {post.data.description}
              </p>
              <a
                data-astro-prefetch
                href={`/posts/${post.slug}`}
                class="relative float-right w-20 overflow-hidden rounded-full bg-blue-400 py-1 text-center font-space-android tracking-widest text-slate-50 shadow-md shadow-blue-950/30 ring-2 ring-slate-50"
              >
                <SvgGrain className="absolute top-0 left-0 h-full w-full opacity-50 bg-gradient-to-r from-blue-900" />
                <span class="relative">Read</span>
              </a>
            </div>
          );
        })
      }
    </section>
  </div>
</Layout>

<style>
  .text-glow {
    @apply text-white dark:text-slate-950;
    -webkit-text-stroke: 1px rgb(96 165 250);
    text-shadow: 0px 1px 4px rgb(96 165 250);
    font-family: var(--space-android);
  }
</style>
